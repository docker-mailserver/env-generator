# -----------------------------------------------
# --- General -----------------------------------
# --- https://editorconfig.org ------------------
# -----------------------------------------------

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
tab_width                = 4
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# -----------------------------------------------
# --- Rust --------------------------------------
# -----------------------------------------------

[*.rs]
indent_style = tab
